{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts", "custom.d.ts"],
  "exclude": ["node_modules"]
}
